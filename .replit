modules = ["nodejs-20", "postgresql-16", "web"]
hidden = [".config", ".git"]

[nix]
channel = "stable-24_05"
packages = ["lsof", "jq", "file"]

[env]
PORT = "5000"
NODE_ENV = "production"

# ðŸ”¥ Correct runtime for workspace + deployment
run = "node dist/index.js"

[deployment]
build = ["sh", "-c", "npm ci --omit=dev && npm run build"]
run = ["npm", "start"]
deploymentTarget = "autoscale"

ignore = ["dist/public/assets/*.map"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 40599
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node dist/index.js"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true
