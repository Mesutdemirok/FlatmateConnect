modules = ["nodejs-20", "postgresql-16", "web"]
hidden = [".config", ".git", "dist"]

[nix]
channel = "stable-24_05"
packages = ["lsof", "jq", "file"]

[env]
PORT = "5000"
NODE_ENV = "production"

# ✅ Used for local development (Replit run button)
run = "npm run dev"

# ✅ Deployment configuration for autoscale
[deployment]
build = ["sh", "-c", "npm ci --omit=dev && npm run build"]
run = ["node", "dist/index.js"]
deploymentTarget = "autoscale"

# ⚠️ Do NOT ignore node_modules anymore
ignore = ["dist/public/assets/*.map"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 36829
externalPort = 3001

[[ports]]
localPort = 42891
externalPort = 3000

# ✅ Workflows
[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true
