modules = ["nodejs-20", "postgresql-16", "web"]
hidden = [".config", ".git"]

[nix]
channel = "stable-24_05"
packages = ["lsof", "jq", "file"]

[env]
PORT = "5000"
NODE_ENV = "production"

# üî• Force workspace run to use production backend build
run = "node dist/index.js"

# üî• Deployment always uses dist too
[deployment]
build = ["npm", "ci", "--omit=dev"]
run = ["node", "dist/index.js"]
deploymentTarget = "autoscale"

# ‚ö†Ô∏è Keep ignore simple and safe
ignore = ["dist/public/assets/*.map"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42891
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
# üî• Force workflow to use dist backend
task = "shell.exec"
args = "node dist/index.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true
