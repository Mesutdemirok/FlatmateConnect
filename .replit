modules = ["nodejs-20", "postgresql-16", "web"]
hidden = [".config", ".git", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["lsof", "jq", "file"]

[env]
PORT = "5000"
NODE_ENV = "production"

# ✅ Replit uses this to run locally
run = "node server.js"

# ✅ Define how publishing should deploy your site
[deployment]
run = "npm run build && node server.js"
deploymentTarget = "web"
ignore = ["node_modules", "dist/public/assets/*.map"]

# ✅ Define open port mapping
[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
